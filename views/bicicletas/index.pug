extends ../layout

block content
  .container.p-2
    table.table.table-striped
      thead
        tr
          th(scope='col') #
          th(scope='col') Color
          th(scope='col') Modelo
          th(scope='col') Ubicacion
          th(scope='col') Acciones
        tbody
          each bici in bicis
            tr
              th(scope='row')
                = bici.id
              td= bici.color
              td= bici.modelo
              td= bici.ubicacion
              td
                button.btn.btn-success.text-white.btn-sm Mostrar

    
                
                
